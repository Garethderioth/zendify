{
  "name": "zendify",
  "version": "1.0.0",
  "description": "An mini platform for send tickets into Zendesk",
  "main": "./src/index.js",
  "engines": {
    "node": "6.3.1"
  },
  "scripts": {
    "build:client": "NODE_ENV=production webpack",
    "build:src": "babel src -d dist",
    "build": "npm run build:client && npm run build:src",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "clean:build": "rm -rf dist public",
    "commit": "git-cz",
    "cover": "nyc npm run test",
    "dev": "nodemon src/server --exec babel-node & webpack-dev-server",
    "lint": "eslint client src",
    "postinstall": "npm run build",
    "start": "node dist/server",
    "test:watch": "ava 'tests/**/*.test.js' --verbose --watch",
    "test": "ava 'tests/**/*.test.js' --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Garethderioth/zendify.git"
  },
  "keywords": [
    "zendesk",
    "auth0"
  ],
  "author": "Guillermo Rodas <garethderioth@gmail.com> (http://guillermorodas.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Garethderioth/zendify/issues"
  },
  "homepage": "https://github.com/Garethderioth/zendify#readme",
  "devDependencies": {
    "ava": "0.16.0",
    "babel-cli": "6.11.4",
    "babel-core": "6.13.2",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "commitizen": "2.8.6",
    "css-loader": "0.23.1",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "3.3.1",
    "eslint-config-airbnb": "10.0.1",
    "eslint-loader": "1.5.0",
    "eslint-plugin-import": "1.13.0",
    "eslint-plugin-jsx-a11y": "2.1.0",
    "eslint-plugin-react": "6.1.2",
    "ghooks": "1.3.2",
    "node-sass": "3.8.0",
    "nodemon": "1.10.0",
    "nyc": "8.1.0",
    "react-hot-loader": "1.3.0",
    "redux-logger": "2.6.1",
    "sass-loader": "4.0.0",
    "style-loader": "0.13.1",
    "validate-commit-msg": "2.7.0",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1"
  },
  "dependencies": {
    "auth0-lock": "10.1.0",
    "breakpoint-sass": "2.7.0",
    "classnames": "2.2.5",
    "dotenv": "2.0.0",
    "good": "7.0.1",
    "good-console": "6.1.2",
    "hapi": "14.2.0",
    "inert": "4.0.1",
    "isomorphic-fetch": "2.2.1",
    "joi": "9.0.4",
    "joi-browser": "9.0.4",
    "joi-validation-strategy": "0.3.3",
    "jwt-decode": "2.1.0",
    "moment": "2.14.1",
    "normalize-scss": "5.0.3",
    "react": "15.3.0",
    "react-dom": "15.3.0",
    "react-redux": "4.4.5",
    "react-router": "2.6.1",
    "react-router-redux": "4.0.5",
    "react-validation-mixin": "5.4.0",
    "redux": "3.5.2",
    "redux-thunk": "2.1.0",
    "spinkit": "1.2.5",
    "zendesk-node-api": "1.0.3"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "nyc": {
    "include": ["src", "client"]
  },
  "browser": {
    "joi": "joi-browser"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage && npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "helpMessage": "\nLooks like you're not using the `npm run commit` command. Please use it instead of `git commit`.\n"
    }
  }
}
