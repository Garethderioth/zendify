{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-body-style": "off",
    "import/no-extraneous-dependencies": "off",
    "max-len": ["warn", 80],
    "react/jsx-filename-extension": "off",
    "react/no-string-refs": "off",
    "react/require-extension": "off"
  }
}
